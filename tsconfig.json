{
	"compilerOptions": {
		"module": "ES2022",
		"lib": ["ES2022", "DOM"],
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"target": "ES2022",
		"strict": true,
		"typeRoots": ["node_modules/@types"],
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"jsx": "react",
		"allowJs": true,
		"outDir": ""
	},
	"include": ["src/**/*", "custom.d.ts"],
	"exclude": ["node_modules", "**/*.js", "*/styled.js"]
}
